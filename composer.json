{
  "name": "willishq/query-grid",
  "description": "Query builder and DataGrid",
  "license": "MIT",
  "authors": [
    {
      "name": "Andrew Willis",
      "email": "andrew@willishq.co.uk"
    }
  ],
  "autoload": {
    "psr-4": {
      "Willishq\\QueryGrid\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4",
    "phpstan/phpstan": "^0.10.3",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "scripts": {
    "test-coverage": [
      "vendor/bin/phpstan analyse src --level=7",
      "vendor/bin/phpcs --standard=PSR2 src",
      "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.clover"
    ],
    "test": [
      "vendor/bin/phpstan analyse src --level=7",
      "vendor/bin/phpcs --standard=PSR2 src",
      "vendor/bin/phpunit --no-logging"
    ]
  }
}
